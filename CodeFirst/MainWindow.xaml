<Window x:Class="CodeFirst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeFirst"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <StackPanel Orientation="Horizontal">
        <DataGrid SelectionChanged="categoryDataGrid_SelectionChanged" x:Name="categoryDataGrid" Width="150">
        </DataGrid>
        <DataGrid SelectionChanged="bookDataGrid_SelectionChanged" x:Name="bookDataGrid" Width="550">

        </DataGrid>
        <DataGrid x:Name="authorDataGrid" Width="300">

        </DataGrid>
    </StackPanel>
</Window>
